{
  "authors": [ "Allan Hardy" ],
  "buildOptions": {
    "warningsAsErrors": true,
    "nowarn": [
      "CS1591"
    ],
    "xmlDoc": true,
    "debugType": "full",
    "additionalArguments": [ "/ruleset:../../AppMetrics.ruleset", "/additionalfile:../../stylecop.json" ]
  },
  "copyright": "Allan Hardy 2016",

  "dependencies": {
    "App.Metrics": "1.0.0-rc1",
    "Microsoft.AspNetCore.Routing": "1.1.0",
    "Microsoft.AspNetCore.Hosting": "1.1.0",
    "Microsoft.Extensions.DependencyInjection.Abstractions": "1.1.0",
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    }
  },
  "description": "Extends the App.Metrics library providing a set AspNet Core Middleware Components which will record things like error rates per endpoint and an overall rate, request rates per endpoint and an overall rate etc.",
  "frameworks": {
    "netstandard1.6": {
      "imports": [
        "dotnet5.6",
        "portable-net45+win8"
      ]
    },
    "net461": {}
  },
  "packOptions": {
    "tags": [
      "mvc",
      "measurements",
      "charts",
      "timer",
      "histogram",
      "graphite",
      "influxdb",
      "health checks",
      "metrics"
    ],
    "repository": {
      "type": "git",
      "url": "git://github.com/alhardy/AppMetrics"
    },
    "projectUrl": "https://alhardy.github.io/app-metrics-docs/getting-started/intro.html#configuring-a-web-host",
    "licenseUrl": "https://github.com/alhardy/AppMetrics/blob/master/LICENSE",
    "iconUrl": "https://alhardy.github.io/app-metrics-docs/logo.png"
  },
  "version": "1.0.0-rc1"

}
